<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="175dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toTopOf="@+id/to_test_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.110000014"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/bobeshchko" />

    <Button
        android:id="@+id/to_test_one"
        android:layout_width="284dp"
        android:layout_height="90dp"

        android:layout_marginStart="6dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/round"
        android:scaleType="fitCenter"
        android:text="Начать тест 2"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img" />

    <Button
        android:id="@+id/to_test_two"
        android:layout_width="284dp"
        android:layout_height="90dp"

        android:background="@drawable/round"
        android:scaleType="fitCenter"
        android:text="Начать тест 1"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img"
        app:layout_constraintVertical_bias="0.335" />

    <Button
        android:id="@+id/to_test_three"
        android:layout_width="284dp"
        android:layout_height="90dp"

        android:layout_marginStart="6dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/round"
        android:scaleType="fitCenter"
        android:text='Начать тест "Компьютерные сети"'
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img"
        app:layout_constraintVertical_bias="0.667" />

    <LinearLayout
            android:id="@+id/mainLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </LinearLayout>
</android.support.constraint.ConstraintLayout>